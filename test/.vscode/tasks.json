{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "make",
            "args": [
                "-o",
                "hello",
                "hello.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}/SRC"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Create Submission",
            "command": "createSubmission.bash ${workspaceFolderBasename}_Julian_Singkham",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Create PDF Submission",
            "problemMatcher": []
        }
    ]
}